<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:ignore="ExtraText">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" android:contentDescription="@string/welcome_backgroung"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="77dp"
            android:layout_height="34dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            android:contentDescription="@string/logo_image"/>
    <TextView
            android:text="@string/go_all_in"
            android:textAlignment="center"
            android:textAllCaps="true" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.491"
            android:layout_width="264dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:fontFamily="@font/montserrat"
            android:layout_height="51dp"
            android:textSize="36sp"
            android:textColor="@android:color/white" android:id="@+id/textView"/>


    <TextView
            android:text="@string/on_going_all_out"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_width="266dp"
            android:layout_height="50dp"
            android:id="@+id/textView2" android:textColor="@android:color/white"
            app:fontFamily="@font/montserrat" tools:ignore="MissingConstraints"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="@string/find_a_team_in_your_city_and_dominate_the_league"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:fontFamily="@font/montserrat"
            android:textColor="@android:color/white" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.516" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/getstartedbtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="0.189"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/getstartedbtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:background="@drawable/swoosh_button" android:textSize="24sp"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>