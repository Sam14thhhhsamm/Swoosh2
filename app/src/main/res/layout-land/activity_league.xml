<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" android:contentDescription="@string/background_image"/>
    <ImageView
            android:layout_width="107dp"
            android:layout_height="45dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.094" android:layout_marginTop="8dp"
            android:contentDescription="@string/logo_image"/>
    <TextView
            android:text="@string/desired_league"
            android:textAllCaps="true"
            app:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView3" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.492"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp">
        <ToggleButton
                android:text="@string/mens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mensLeagueBtn" android:layout_weight="1"
                tools:text="@string/mens" android:onClick="onMensClicked" android:textColor="@android:color/white"
                android:background="@drawable/swoosh_toggle" android:textOff="@string/mens"
                android:textOn="@string/mens" android:textSize="18sp"/>
        <ToggleButton
                android:text="@string/womens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/womensLeagueBtn" android:layout_weight="1"
                android:textOff="@string/womens" android:textOn="@string/womens"
                android:textColor="@android:color/white" android:textSize="18sp"
                android:background="@drawable/swoosh_toggle" android:onClick="onWomensClicked"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
        <ToggleButton
                android:text="@string/co_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/coedLeagueBtn" android:layout_weight="1"
                android:textOff="@string/co_ed" android:textOn="@string/co_ed" android:onClick="onCoedClicked"
                android:textSize="18sp" android:textColor="@android:color/white"
                android:background="@drawable/swoosh_toggle"/>
    </LinearLayout>
    <Button
            android:text="@string/next"
            app:fontFamily="@font/montserrat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/leagueNextBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:background="@drawable/swoosh_button"
            android:textColor="@android:color/white" android:onClick="leagueNextClick" android:textSize="24sp"
            tools:ignore="OnClick"/>
</android.support.constraint.ConstraintLayout>